<div class="container">
  <div class="row mt-4">
    <div class="col-md-5 offset-md-1">
      <h4><span class="pr-4 pl-4" style="background-color:whitesmoke;">
        <%= @member.name %>さんの会員詳細</span></h4>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-10 offset-md-1">
      <table class="table">
        <tbody>
          <tr>
            <td class="col-md-3">会員ID</td>
            <td><%= @member.id %></td>
          </tr>
          <tr>
            <td><%= image_tag @member.get_profile_image(100,100) %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @member.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @member.email %></td>
          </tr>
          <tr>
            <td>退会ステータス</td>
            <% if @member.is_deleted == false %>
            <td style="color:green;">有効</td>
            <% else %>
            <td style="color:gray;">退会済</td>
            <% end %>
          </tr>
          <tr>
            <td></td>
            <td>
                <%= link_to "編集する", edit_admin_member_path(@member), class:"btn btn-md btn-success", style:"border-radius: 5px;" %>
            </td>
          </tr>
        <tbody>
      </table>
    </div>
  </div>  
</div>
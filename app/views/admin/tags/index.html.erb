<div class="container">
  <div class="row mt-4">
    <div class="col-md-5 offset-md-1">
      <h4><span class="pr-4 pl-4" style="background-color:whitesmoke;">タグ追加</span></h4>
    </div>
  </div>
  <% if @tag.errors.any? %>
  <%= @tag.errors.count %>件のエラーが発生しました
    <ul>
      <% @tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row mt-5">
    <div class="col-md-6">
      <%= form_with model: @tag,url: admin_tags_path do |f| %>
      <table class="table">
        <tr>
          <td><%= f.label :name, "タグ名"%></td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '新規登録', class:"btn btn-md btn-success", style: "border-radius: 10px;" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row md-5">
    <div class="col-lg-4">
        <table class="table">  
          <tr style="background-color:whitesmoke;">
            <td class="text-center">タグ一覧</td>
            <td></td>
          </tr>
        </table>
        <% @tags.each do |tag| %>
        <table class="table">
          <tr>
            <td>
              <%= tag.name %> 
            </td>
            <td class="text-right">
              <%= link_to  "編集する", edit_admin_tag_path(tag), class:"btn btn-sm btn-success", style: "border-radius: 10px;" %>
              <%#= link_to "削除", admin_tag_path(tag), method: :delete, class:"btn btn-sm btn-danger", style: "border-radius: 10px;" %>
            </td>
          </tr>
        </table>
        <% end %>
    </div>
  </div>
</div>
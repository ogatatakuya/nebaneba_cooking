<div class="container">
  <div class="row mt-4">
    <div class="col-md-9 offset-md-1">
      <h4><span class="pr-4 pl-4" style="background-color:whitesmoke;">料理一覧</span></h4>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="col-lg-12">
      
<table class="table table-bordered">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>料理名</th>
      <th>投稿者</th>
      <th>タグ名</th>
    </tr>
  </thead>
  <% @cookings.each do |cooking| %>
  <tbody>
    <tr>
      <td><%= cooking.id %></td>
      <td><%= link_to admin_cooking_path(cooking.id) do %>
               <%= cooking.name %>
          <% end %></td>
     
      <td><%= cooking.member.name %></td>
      <td><%= cooking.tag.name %></td>
    </tr>
  </tbody>
  <% end %>
</table>

    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-6 offset-md-5">
      <div class="text-center"><%= paginate @cookings %></div>
    </div>
  </div>
</div>